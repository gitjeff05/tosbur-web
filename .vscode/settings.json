{
    "cSpell.words": [
        "Windi",
        "linuxkit",
        "rulesets",
        "tosbur",
        "vite",
        "vitejs",
        "windicss"
    ],
    "javascript.format.enable": false,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.smoothScrolling": true,
    "editor.scrollbar.verticalScrollbarSize": 28,
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.tree.indent": 20,
    "workbench.colorTheme": "Community Material Theme Ocean",
    "window.title": "${activeEditorLong}${separator}${rootName}",
    "breadcrumbs.icons": true,

    "eslint.format.enable": true,
    "eslint.codeAction.showDocumentation": {
        "enable": true
    },
    "eslint.validate": ["javascript", "javascriptreact", "vue"],
    "eslint.alwaysShowStatus": true,
    "eslint.packageManager": "pnpm",

    "prettier.enable": true,
    "prettier.requireConfig": false,
    "prettier.documentSelectors": ["**/*.vue", "**/*.js", "**/*.ts"],
    "prettier.insertPragma": true,
    "prettier.useEditorConfig": false,
    "prettier.vueIndentScriptAndStyle": true,
    "windicss.colorDecoratorsType": "border",
    "windicss.sortOnSave": true,
    "vetur.format.enable": false,

    "editor.tabCompletion": "onlySnippets",
    "vetur.validation.style": false
}
